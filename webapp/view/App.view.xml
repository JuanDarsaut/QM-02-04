<mvc:View controllerName="customer.zlomansernum.zlomansernum.controller.App"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar">
    <App id="app">
     <f:DynamicPage id="page" showFooter="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>title}" />
                </f:heading>            
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader >
                <f:content>
                    <fb:FilterBar id="idFilterBar" showGoOnFB="true" search="onFiltrar">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem groupName="filtros" name="A" label="{i18n>lote}" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idFilterLote"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="filtros" name="B" label="{i18n>inspector}" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idFilterInspector"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="filtros" name="C" label="{i18n>fecha}" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idFilterFecha"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="filtros" name="D" label="{i18n>codigo}" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idFilterCodigo"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="filtros" name="E" label="{i18n>descripcion}" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idFilterDescripcion"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="filtros" name="F" label="{i18n>numero}" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idFilterNumero"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
                <OverflowToolbar>
                    <Button text="{i18n>grabar}"/>
                    <Button text="{i18n>modificar}"/>
                    <Button text="{i18n>borrar}"/>
                    <Button text="{i18n>consultar}"/>
                </OverflowToolbar>
            </f:DynamicPageHeader>
        </f:header>
        
        <f:content>
            <Table>
                <columns>
                    <Column >
                        <Text text="{i18n>lote}" />
                    </Column>
                    <Column >
                       <Text text="{i18n>inspector}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>fecha}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>codigo}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>numero}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>descripcion}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>defectos}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>observaciones}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>tipoDefecto}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>doc}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>hde}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>loteSAP}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>suministrador}" />
                    </Column>
                </columns>
            </Table>
        </f:content>
        <f:footer>
            <OverflowToolbar id="footertb">
                <Text text="{i18n>totalRegistros}"/>
                <Text text="{i18n>totalDefA}"/>
                <Text text="{i18n>totalDefB}"/>
                <Text text="{i18n>totalDefC}"/>
            </OverflowToolbar>
        </f:footer>
     </f:DynamicPage>
    </App>
</mvc:View>
